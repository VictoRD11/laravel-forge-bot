{
    "name": "itorgov/laravel-forge-bot",
    "type": "project",
    "description": "Laravel Forge chat bot for Telegram messenger",
    "keywords": [
        "laravel",
        "forge",
        "telegram",
        "bot"
    ],
    "license": "ISC",
    "authors": [
        {
            "name": "Ivan Torgov",
            "email": "likecod@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/itorgov/forge-sdk"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "ext-pdo": "*",
        "clue/socks-react": "^1.0",
        "fideloper/proxy": "^4.2",
        "fruitcake/laravel-cors": "^1.0",
        "guzzlehttp/guzzle": "^6.3",
        "hashids/hashids": "^4.0",
        "irazasyed/telegram-bot-sdk": "dev-develop#5bacf81",
        "laravel/framework": "^7.0",
        "laravel/horizon": "^4.2",
        "laravel/tinker": "^2.0",
        "predis/predis": "^1.1",
        "themsaid/forge-sdk": "dev-develop"
    },
    "require-dev": {
        "facade/ignition": "^2.0",
        "fzaninotto/faker": "^1.9.1",
        "laravel/telescope": "^3.2",
        "mockery/mockery": "^1.3.1",
        "nunomaduro/collision": "^4.1",
        "phpunit/phpunit": "^8.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "laravel/telescope"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "post-update-cmd": [
            "@php artisan horizon:publish",
            "@php artisan telescope:publish"
        ]
    }
}
